{
    "name": "kwakuofosuagyeman/ai-assistant",
    "description": "AI-powered assistant for Laravel applications",
    "type": "library",
    "keywords": [
        "ai",
        "assistant",
        "openai",
        "gemini",
        "claude",
        "anthropic",
        "chatgpt",
        "openai-api",
        "laravel",
        "laravel-package",
        "php",
        "ai-integration",
        "machine-learning",
        "text-generation",
        "ai-tools",
        "gpt",
        "natural-language-processing",
        "nlp",
        "ai-service",
        "automation"
    ],
    "require": {
        "php": ">=8.0",
        "guzzlehttp/guzzle": "^7.0",
        "openai-php/client": "^0.10.3"
    },
    "autoload": {
        "psr-4": {
            "Kwakuofosuagyeman\\AIAssistant\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Kwakuofosuagyeman\\AIAssistant\\Providers\\AIAssistantServiceProvider"
            ],
            "aliases": {
                "AI": "Kwakuofosuagyeman\\AIAssistant\\Facades\\AI"
            }
        }
    },
    "authors": [
        {
            "name": "Kwaku Ofosu Agyeman",
            "email": "kwakuayemang.2000@gmail.com"
        }
    ],
    "config": {
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^11.5"
    }
}
